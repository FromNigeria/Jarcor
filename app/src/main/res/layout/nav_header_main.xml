<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="#F1f4f6"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <TextView
        android:id="@+id/textView_name"
        android:text="Welcome to Jarcor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:textColor="#000"
        android:textStyle="normal|bold"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:layout_alignTop="@+id/imageView_display"
        android:layout_toRightOf="@+id/imageView_display"
        android:layout_toEndOf="@+id/imageView_display" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView_display"
        android:src="@drawable/ic_launcher"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:scaleType="centerCrop"
        android:cropToPadding="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="51dp" />



</RelativeLayout>
